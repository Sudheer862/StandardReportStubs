<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m="urn:import:com.medassets.report.client.other"
        >


    <ui:style>
        .dlg {
            padding: 10px;
        }

        .panel {
            padding: 10px;
            border: solid 1px;
        }

        .aboutText {
            text-align: left;
        }

        .left {
            float: right;
        }

        .buttons {
            text-align: right;
        }
    </ui:style>

    <g:HTMLPanel width='24em' styleName='{style.dlg}'>
        <m:VerticalFlowPanel>
            <g:SimplePanel styleName="{style.panel}">

                <m:HorizontalFlowPanel>
                    <g:RadioButton name="bool">AND</g:RadioButton>
                    <g:RadioButton name="bool">OR</g:RadioButton>
                    <g:RadioButton name="bool">AND NOT</g:RadioButton>
                    <g:RadioButton name="bool">OR NOT</g:RadioButton>
                </m:HorizontalFlowPanel>
            </g:SimplePanel>

            <m:HorizontalFlowPanel height="2em" width="100%">
                <g:Label>Insurance Plan</g:Label>
                <g:ListBox styleName="{style.left}" ui:field="planListBox"/>
            </m:HorizontalFlowPanel>

            <g:Label>that</g:Label>
            <g:ListBox ui:field="thatListBox"/>
            <g:CheckBox>Ignore Capitalization</g:CheckBox>
        </m:VerticalFlowPanel>
        <div class='{style.buttons}'>
            <g:Button text='Close' ui:field="closeButton"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
